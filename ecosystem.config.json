{
  "name": "hosseini-net",
  "script": "npm",
  "args": "start",
  "cwd": "/var/www/hosseini.net",
  "instances": 1,
  "exec_mode": "fork",
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "env_production": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "log_date_format": "YYYY-MM-DD HH:mm Z",
  "error_file": "/var/log/pm2/hosseini-net-error.log",
  "out_file": "/var/log/pm2/hosseini-net-out.log",
  "pid_file": "/var/run/pm2/hosseini-net.pid",
  "watch": false,
  "ignore_watch": ["node_modules", ".git", "logs"],
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s"
}
